<UserControl x:Class="NetworkService.Views.EntitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#EAF4FF" 
          Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- LEVI PANEL: Add Form + Search -->
        <StackPanel Grid.Column="0" 
                    Margin="10">
            <!-- Add Form -->
            <Border Padding="10" 
                    Margin="0,0,0,15"
                    Background="White" 
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="ADD NEW ENTITY"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"
                               FontFamily="Agency FB"
                               FontSize="20"
                               FontWeight="Bold"/>

                    <!-- GRID FOR INPUT FIELDS -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ID -->
                        <Grid Grid.Row="0" Grid.Column="0" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="ID:"
                                       FontFamily="Consolas"
                                       FontSize="13"
                                       FontWeight="Bold"/>
                            <TextBox Grid.Row="1"
                                     Text="{Binding CurrentEntity.Id, UpdateSourceTrigger=PropertyChanged}"
                                     FontFamily="Consolas"
                                     FontSize="12"/>
                            <TextBlock Grid.Row="2"
                                       Foreground="Red"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Text="{Binding CurrentEntity.ValidationErrors[Id]}"/>
                        </Grid>

                        <!-- NAME -->
                        <Grid Grid.Row="0" Grid.Column="1" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="NAME:"
                                       FontFamily="Consolas"
                                       FontWeight="Bold"
                                       FontSize="13"/>
                            <TextBox Grid.Row="1"
                                     Text="{Binding CurrentEntity.Name, UpdateSourceTrigger=PropertyChanged}"
                                     FontFamily="Consolas"
                                     FontSize="12"/>
                            <TextBlock Grid.Row="2"
                                       Foreground="Red"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Text="{Binding CurrentEntity.ValidationErrors[Name]}"/>
                        </Grid>

                        <!-- TYPE -->
                        <Grid Grid.Row="1" Grid.Column="0" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="TYPE:"
                                       FontFamily="Consolas"
                                       FontWeight="Bold"
                                       FontSize="13"/>
                            <ComboBox Grid.Row="1"
                                      ItemsSource="{Binding AvailableTypes}"
                                      SelectedItem="{Binding CurrentEntity.Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="Name"/>
                            <TextBlock Grid.Row="2"
                                       Foreground="Red" 
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Text="{Binding CurrentEntity.ValidationErrors[Type]}"/>
                        </Grid>

                        <!-- VALUE -->
                        <Grid Grid.Row="1" Grid.Column="1" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="VALUE:"
                                       FontFamily="Consolas"
                                       FontWeight="Bold"
                                       FontSize="13"/>
                            <TextBox Grid.Row="1"
                                     Text="{Binding CurrentEntity.Value, UpdateSourceTrigger=PropertyChanged}"
                                     FontFamily="Consolas"
                                     FontSize="12"/>
                            <TextBlock Grid.Row="2"
                                       Foreground="Red"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Text="{Binding CurrentEntity.ValidationErrors[Value]}"/>
                        </Grid>
                    </Grid>

                    <!-- Add Button -->
                    <Button Content="Add" 
                            FontFamily="Consolas"
                            Command="{Binding AddCommand}" 
                            Width="100" 
                            Height="30"
                            Margin="10,10,10,0" 
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Entity Search -->
            <Border Padding="10" 
                    Background="White" 
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="ENTITY SEARCH"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"
                               FontFamily="Agency FB"
                               FontSize="20"
                               FontWeight="Bold" />

                    <StackPanel>
                        <RadioButton Content="Name"
                                     Margin="54 0 0 0"
                                     FontFamily="Consolas"
                                     FontWeight="Bold"
                                     IsChecked="{Binding SearchByName}" 
                                     GroupName="SearchOption"/>
                        <RadioButton Content="Type" 
                                     Margin="54 0 0 0"
                                     FontFamily="Consolas"
                                     FontWeight="Bold"
                                     IsChecked="{Binding SearchByType}" 
                                     GroupName="SearchOption"/>
                    </StackPanel>

                    <TextBox Margin="0,10,0,0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             FontFamily="Consolas"
                             FontSize="12"
                             Width="200"
                             Height="32"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="3,10,0,0">
                        <Button Content="Apply"
                                FontFamily="Consolas"
                                Command="{Binding ApplySearchCommand}" 
                                Width="97.5"
                                Height="30"
                                Margin="0,0,5,0"/>
                        <Button Content="Clear" 
                                FontFamily="Consolas"
                                Command="{Binding ClearSearchCommand}" 
                                Width="97.5"
                                Height="30"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- RIGHT PANEL: Table + Delete -->
        <Grid Grid.Column="1" 
              Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Table -->
            <DataGrid Grid.Row="0"
                      Margin="0,0,0,10"
                      ItemsSource="{Binding FilteredEntities}"
                      SelectedItem="{Binding SelectedEntity}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="2*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="1*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Delete Button -->
            <Button Grid.Row="1"
                    Margin="10"
                    Content="Delete Selected" 
                    FontFamily="Consolas"
                    Command="{Binding DeleteCommand}" 
                    Width="120"
                    Height="30" 
                    HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>