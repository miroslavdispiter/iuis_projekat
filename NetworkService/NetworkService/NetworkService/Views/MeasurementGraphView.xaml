<UserControl x:Class="NetworkService.Views.MeasurementGraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:conv="clr-namespace:NetworkService.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:PointsConverter x:Key="PointsConverter"/>
        <conv:CenterOffsetConverter x:Key="CenterOffsetConverter"/>
    </UserControl.Resources>

    <Grid Background="#EAF4FF" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SELECT ENTITY -->
        <Border Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="15"
                Margin="0,10,0,0"
                Background="White"
                CornerRadius="6"
                BorderThickness="1"
                BorderBrush="#DDD">
            <ComboBox Width="220"
                      ItemsSource="{Binding Entities}"
                      SelectedItem="{Binding SelectedEntity}"
                      DisplayMemberPath="Name"
                      FontSize="14"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- MAIN GRAPH -->
        <Border Grid.Row="1"
                BorderBrush="#0066cc"
                BorderThickness="3"
                CornerRadius="8"
                Margin="10"
                Background="White">

            <Canvas Width="650" 
                    Height="300" 
                    Background="#FAFAFA">

                <!-- Horizontalna linija (X osa) -->
                <Line X1="0" Y1="250"
                      X2="650" Y2="250"
                      Stroke="Gray" StrokeThickness="1"/>

                <!-- Vertikalne linije -->
                <ItemsControl ItemsSource="{Binding SectionLines}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding}" X2="{Binding}" 
                                  Y1="0" Y2="250"
                                  Stroke="LightGray" StrokeThickness="1"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Polyline koja spaja tacke -->
                <Polyline Stroke="DarkBlue"
                          StrokeThickness="2"
                          Points="{Binding GraphPoints}"/>

                <!-- Kuglice + vrednosti + vreme ispod -->
                <ItemsControl ItemsSource="{Binding Measurements}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Canvas>
                                <!-- Krug -->
                                <Ellipse Width="28"
                         Height="28"
                         Fill="{Binding Color}"
                         Stroke="DarkBlue"
                                    StrokeThickness="2"
                         Canvas.Left="{Binding RelativeX, Converter={StaticResource CenterOffsetConverter}, ConverterParameter=28}"
                         Canvas.Top="{Binding RelativeY, Converter={StaticResource CenterOffsetConverter}, ConverterParameter=28}"/>

                                    <!-- Vrednost unutar kruga -->
                                    <TextBlock Text="{Binding Value}"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Width="28"
                           Height="28"
                           Canvas.Left="{Binding RelativeX, Converter={StaticResource CenterOffsetConverter}, ConverterParameter=28}"
                           Canvas.Top="{Binding RelativeY, Converter={StaticResource CenterOffsetConverter}, ConverterParameter=28}"/>

                                    <!-- Vreme ispod (na X osi) -->
                                    <TextBlock Text="{Binding Label}"
                           FontSize="10"
                           Foreground="Black"
                           TextAlignment="Center"
                           Width="50"
                           Canvas.Left="{Binding RelativeX, Converter={StaticResource CenterOffsetConverter}, ConverterParameter=50}"
                           Canvas.Top="270"/>
                            </Canvas>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
