<UserControl x:Class="NetworkService.Views.DisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:model="clr-namespace:NetworkService.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F8F8F8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- LEVA STRANA: TreeView -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Entities" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

            <TreeView AllowDrop="True" ItemsSource="{Binding EntityGroups}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Drop">
                        <i:InvokeCommandAction Command="{Binding TreeViewDropCommand}" PassEventArgsToCommand="True"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type model:EntityGroup}" ItemsSource="{Binding Entities}">
                        <TextBlock FontWeight="Bold" Text="{Binding GroupName}"/>
                    </HierarchicalDataTemplate>

                    <DataTemplate DataType="{x:Type model:Entity}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="20" Height="20" Source="{Binding Type.ImagePath}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding DataContext.MouseDownCommand,
                           RelativeSource={RelativeSource AncestorType=UserControl}}"
                           CommandParameter="{Binding}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding DataContext.MouseUpCommand,
                           RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </StackPanel>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
        </StackPanel>

        <!-- DESNA STRANA: Slotovi u Canvasu -->
        <Grid Grid.Column="1" Margin="10">
            <ItemsControl ItemsSource="{Binding CanvasSlots}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- 3x4 mreža slotova -->
                        <UniformGrid Rows="3" Columns="4" Background="#EEEEEE"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- SLOT KONTEJNER -->
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="8" 
                    Background="White" CornerRadius="4"
                    Width="70" Height="70"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    AllowDrop="True">
                            <!-- OVO JE BITNO -->

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Ikonica -->
                                <Image Width="30" Height="30" 
                           Source="{Binding CanvasEntity.Type.ImagePath}" 
                           HorizontalAlignment="Center"/>

                                <!-- ID -->
                                <TextBlock Text="{Binding CanvasEntity.Id, StringFormat=ID: {0}}"
                               FontSize="10" Foreground="Gray"
                               HorizontalAlignment="Center"/>

                                <!-- Vrednost -->
                                <TextBlock Text="{Binding CanvasEntity.Value, StringFormat=Val: {0}}"
                               FontSize="10" Foreground="DarkBlue"
                               HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Drag&Drop POVEZIVANJE -->
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Drop">
                                    <i:InvokeCommandAction Command="{Binding DataContext.DropCommand,
                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                  PassEventArgsToCommand="True"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="DragOver">
                                    <i:InvokeCommandAction Command="{Binding DataContext.DragOverCommand,
                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                  PassEventArgsToCommand="True"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding DataContext.MouseDownCommand,
                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                  CommandParameter="{Binding CanvasEntity}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding DataContext.MouseUpCommand,
                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
