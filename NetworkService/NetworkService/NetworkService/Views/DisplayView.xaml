<UserControl x:Class="NetworkService.Views.DisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:model="clr-namespace:NetworkService.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#EAF4FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: TreeView -->
        <StackPanel Grid.Column="0" 
                    Margin="10">
            <TextBlock Text="ENTITIES" 
                       FontFamily="Agency FB"
                       HorizontalAlignment="Center"
                       FontWeight="Bold" 
                       FontSize="20" 
                       Margin="0,0,0,10"/>

            <TreeView AllowDrop="True" 
                      ItemsSource="{Binding EntityGroups}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Drop">
                        <i:InvokeCommandAction Command="{Binding TreeViewDropCommand}" 
                                               PassEventArgsToCommand="True"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type model:EntityGroup}" 
                                              ItemsSource="{Binding Entities}">
                        <TextBlock FontWeight="Bold" 
                                   FontFamily="Consolas"
                                   Text="{Binding GroupName}"/>
                    </HierarchicalDataTemplate>

                    <DataTemplate DataType="{x:Type model:Entity}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="20" 
                                   Height="20" 
                                   Source="{Binding Type.ImagePath}" 
                                   Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Name}" 
                                       VerticalAlignment="Center"
                                       FontFamily="Consolas"/>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding DataContext.MouseDownCommand,
                                                           RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                           CommandParameter="{Binding}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding DataContext.MouseUpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </StackPanel>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
        </StackPanel>

        <!-- RIGHT PANEL: Slots in canvas -->
        <Grid Grid.Column="1" 
              Margin="10">
            <ItemsControl ItemsSource="{Binding CanvasSlots}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="3" 
                                     Columns="4" 
                                     Background="White"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- UNUTAR SLOTA -->
                        <Border Margin="8" 
                                CornerRadius="4"
                                Width="80" 
                                Height="80"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                AllowDrop="True">

                            <!-- STYLE ZA BORDER -->
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="Gray"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <!-- Kada entitet ima kritičnu vrednost -->
                                        <DataTrigger Binding="{Binding CanvasEntity.IsInDanger}" Value="True">
                                            <Setter Property="BorderBrush" Value="Red"/>
                                            <Setter Property="BorderThickness" Value="3"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- ID -->
                                <TextBlock Text="{Binding CanvasEntity.Id, StringFormat=ID: {0}}"
                                           FontSize="9" 
                                           FontWeight="Bold"
                                           Foreground="#0066cc"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Margin="0,0,0,4"/>

                                <!-- ICON -->
                                <Image Grid.Row="1"
                                       Width="60" 
                                       Height="80" 
                                       Source="{Binding CanvasEntity.Type.ImagePath}" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                                <!-- VALUE -->
                                <TextBlock Grid.Row="2"
                                           Text="{Binding CanvasEntity.Value, StringFormat={}{0} MW}"
                                           FontSize="9" 
                                           FontWeight="Bold"
                                           Foreground="#0066cc"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </Grid>

                            <!-- Drag & drop events -->
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Drop">
                                    <i:InvokeCommandAction Command="{Binding DataContext.DropCommand,
                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    PassEventArgsToCommand="True"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="DragOver">
                                    <i:InvokeCommandAction Command="{Binding DataContext.DragOverCommand,
                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    PassEventArgsToCommand="True"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding DataContext.MouseDownCommand,
                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding CanvasEntity}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding DataContext.MouseUpCommand,
                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
